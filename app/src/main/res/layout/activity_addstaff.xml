<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".AddStaffActivity"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <EditText
            android:id="@+id/etStaffName_activity_staff"
            android:inputType="text"
            android:hint="Staff Name"
            android:layout_marginTop="150dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </EditText>

        <EditText
            android:id="@+id/etStaffMobileNo_activity_staff"
            android:inputType="number"
            android:layout_marginTop="200dp"
            android:hint="Mobile Number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </EditText>

        <EditText
            android:id="@+id/etStaffPassword_activity_staff"
            android:inputType="number"
            android:hint="Create Staff Password"
            android:layout_marginTop="250dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </EditText>

        <Spinner
            android:id="@+id/spinner_designation_activity_addstaff"
            android:layout_marginTop="320dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </Spinner>

        <CheckBox
            android:id="@+id/ckbActive_activity_isstaff"
            android:layout_marginTop="380dp"
            android:text="Is Active"
            android:checked="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </CheckBox>


    </RelativeLayout>
    <include layout="@layout/activity_managers_worker"></include>


</RelativeLayout>