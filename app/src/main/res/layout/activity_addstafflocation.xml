<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".AddStaffLocationActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Spinner
        android:id="@+id/spinner_location_activity_addStaffLocation"
        android:layout_marginTop="70dp"
        android:popupTheme="@style/Widget.AppCompat.TextView.SpinnerItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </Spinner>

    <EditText
        android:id="@+id/etLocationId_activity_addStaffLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </EditText>



    <Spinner
        android:id="@+id/spinner_worker_activity_addStaffLocation"
        android:layout_marginTop="70dp"
        android:popupTheme="@style/Widget.AppCompat.TextView.SpinnerItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </Spinner>

    <EditText
        android:id="@+id/etWorkerId_activity_addStaffLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </EditText>

    <Spinner
        android:id="@+id/spinner_manager_activity_addStaffLocation"
        android:layout_marginTop="70dp"
        android:popupTheme="@style/Widget.AppCompat.TextView.SpinnerItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </Spinner>

    <EditText
        android:id="@+id/etManagerId_activity_addStaffLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </EditText>




</LinearLayout>