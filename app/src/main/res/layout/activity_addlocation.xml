<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".LocationActivity"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/etLocationName_activity_location"
        android:inputType="text"
        android:hint="Location Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </EditText>


    <EditText
        android:id="@+id/etManagerID_activity_location"
        android:inputType="text"
        android:hint="Manager ID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </EditText>

    <EditText
        android:id="@+id/etGuardID_activity_location"
        android:inputType="text"
        android:hint="Worker ID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </EditText>


    <Button

        android:id="@+id/btnSaveLocation_activity_location"
        android:text="Save Location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </Button>

